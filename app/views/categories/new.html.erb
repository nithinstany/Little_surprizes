
  <h2>New category</h2>


<% form_for ([:admin,@category], :url => categories_path,:html => { :multipart => true } ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :category_name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :category_description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :avatar %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :lowest_number_of_points_needed %><br />
    <%= f.text_field :lowest_number_of_points_needed %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>
